@inject ComponentEventBus bus

<div class="input-add__wrapper">

    <label>
        Name:
        <input @bind="label" @bind:event="oninput" />
    </label>

    <button disabled="@(string.IsNullOrWhiteSpace(label))" @onclick="Add">
        <span class="oi oi-plus"></span>
        Add
    </button>

</div>

@code {
    string label;

    async Task Add()
    {
        await bus.Publish(new InputAddEvent(Guid.NewGuid(), label));
        label = string.Empty;
    }
}
